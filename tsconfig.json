{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings",
      "./packages/**/*.d.ts"
    ]
  },
  "include": [
    "./typings/**/*.ts",
    "./packages/**/*.d.ts",
    "./packages/**/*.ts",
    "./packages/**/*.tsx"
  ],
  "exclude": [
    "./packages/*/dist/**/*",
    "**/node_modules/*",
    "**/__tests__/*"
  ]
}
